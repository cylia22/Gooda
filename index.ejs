<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/index.css">
<link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@900&display=swap" rel="stylesheet">

<h1>GOODAS</h1>
<div>
    <a class="btn btn-outline-dark" href="/goodas/new">Make your own GOODA</a>
</div>
<% for (let gooda of goodas){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <%if(gooda.images.length) {%>
            <img class="img-fluid" alt="" src="<%=gooda.images[0].url%>">
    <% }else{%>
        <img class="img-fluid" alt=""
    scr="https://res.cloudinary.com/dfofplzot/image/upload/v1664613498/gooda/gooda/passion_led_us_here_mcrpdo.avif">
<% } %>

 </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= gooda.title %> </h5>
                <p class="card-text"><%= gooda.description %></p>
               <!--<p class="card-text">
                    <small class="text-muted"><%= gooda.location%></small>
                </p>-->
                <a class="btn btn-outline-dark" href="/goodas/<%=gooda._id%>">View <%=gooda.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>